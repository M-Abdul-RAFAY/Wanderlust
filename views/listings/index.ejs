<% layout("/layouts/boilarplate.ejs")%>
<body>
  <!-- Hero Section -->
  <div
    class="hero-section text-center text-white py-5"
    style="
      position: relative;
      background: url('https://images.unsplash.com/photo-1494526585095-c41746248156?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')
        center/cover no-repeat;
      height: 50vh;
      display: flex;
      align-items: center;
      justify-content: center;
    "
  >
    <!-- Dark Overlay -->
    <div
      style="
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 1;
        backdrop-filter: blur(5px);
      "
    ></div>

    <!-- Text Content -->
    <div class="container" style="position: relative; z-index: 2">
      <h1 class="display-4 fw-bold">Welcome to Our Listings</h1>
      <p class="lead">
        Discover amazing deals and exclusive items just for you!
      </p>
      <a href="/listing/create" class="btn btn-light btn-lg mt-3"
        >Create a Listing</a
      >
    </div>
  </div>

  <!-- Cards Section -->
  <div class="container my-2">
    <div class="row g-4">
      <% for (let eachItem of result) { %>
      <div class="col-lg-4 col-md-6 col-sm-12">
        <div class="card shadow-sm">
          <img
            src="<%= eachItem.image.url %>"
            class="card-img-top"
            alt="listing_image"
            style="object-fit: cover; height: 200px"
          />
          <div class="card-body d-flex flex-column">
            <h5 class="card-title fw-bold"><%= eachItem.title %></h5>
            <p class="card-text text-truncate"><%= eachItem.description %></p>
            <div class="">
              <b class="text-primary">Only For: <%= eachItem.price %></b>
              <a
                href="/listing/<%= eachItem.id %>"
                class="btn btn-primary w-100 mt-2"
                >View Details</a
              >
            </div>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</body>
